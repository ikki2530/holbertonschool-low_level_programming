#include "holberton.h"
#include <stdio.h>
/**
 * reverse_array - reverse an array
 * @a: array to reverse
 * @n: number of elements
 * Return: dest string
 */
void reverse_array(int *a, int n)
{
	int arr[n];
	int i;
	int j;

	for (i = n; i > 0; i--)
	{
		arr[n - i] = a[i];
	}

	for (j = 0; j < n; j++)
	{
		a[j] = arr[j];
	}

}
